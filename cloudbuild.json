{
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  },

  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "europe-west3-docker.pkg.dev/hs-heilbronn-devsecops/cloud-run-source-deploy/note-api:${_IMAGE_TAG}",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "europe-west3-docker.pkg.dev/hs-heilbronn-devsecops/cloud-run-source-deploy/note-api:${_IMAGE_TAG}"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "${_SERVICE_NAME}",
        "--image",
        "europe-west3-docker.pkg.dev/hs-heilbronn-devsecops/cloud-run-source-deploy/note-api:${_IMAGE_TAG}",
        "--region",
        "${_REGION}",
        "--platform",
        "managed",
        "--allow-unauthenticated",
        "--set-env-vars",
        "BACKEND=memory"
      ]
    }
  ],
  "timeout": "1200s",
  "substitutions": {
    "_SERVICE_NAME": "note-api-hs-heilbron-devsecops-omega-oops",
    "_REGION": "europe-west3",
    "_IMAGE_TAG": "latest"
  }
}
